# =============================================================================
# GigStream - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=GigStream

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://user:password@localhost:5432/gigstream

# -----------------------------------------------------------------------------
# Authentication (NextAuth.js)
# -----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# Payments
# -----------------------------------------------------------------------------
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# -----------------------------------------------------------------------------
# File Upload (Cloudinary)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@gigstream.com

# -----------------------------------------------------------------------------
# Real-time (Pusher)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_PUSHER_KEY=your-pusher-key
PUSHER_APP_ID=your-pusher-app-id
PUSHER_SECRET=your-pusher-secret
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# -----------------------------------------------------------------------------
# Caching (Redis)
# -----------------------------------------------------------------------------
# Redis connection URL
# Format: redis://user:password@host:port
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Monitoring & Analytics
# -----------------------------------------------------------------------------
# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-public-sentry-dsn

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# CSRF Protection
CSRF_SECRET=your-csrf-secret-change-in-production

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
ENABLE_PAYPAL=true
ENABLE_GOOGLE_AUTH=true
ENABLE_PUSH_NOTIFICATIONS=false

# -----------------------------------------------------------------------------
# Production Only
# -----------------------------------------------------------------------------
# Set these only in production environment

# Domain
# NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Database (Production)
# DATABASE_URL=postgresql://user:password@production-host:5432/gigstream

# Redis (Production)
# REDIS_URL=redis://production-redis:6379

# Stripe (Production)
# STRIPE_PUBLIC_KEY=pk_live_your_live_key
# STRIPE_SECRET_KEY=sk_live_your_live_key

# PayPal (Production)
# PAYPAL_MODE=live
